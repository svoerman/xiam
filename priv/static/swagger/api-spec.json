{
  "openapi": "3.0.0",
  "info": {
    "title": "XIAM API",
    "description": "API Documentation for XIAM Identity and Access Management system",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:4000",
      "description": "Development server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT token in the format: Bearer [token]"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "User's unique identifier"
          },
          "email": {
            "type": "string",
            "description": "User's email address"
          },
          "mfa_enabled": {
            "type": "boolean",
            "description": "Whether multi-factor authentication is enabled for the user"
          }
        }
      },
      "Role": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Role's unique identifier"
          },
          "name": {
            "type": "string",
            "description": "Role name"
          },
          "capabilities": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of capabilities associated with the role"
          }
        }
      },
      "ConsentRecord": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Consent record's unique identifier"
          },
          "consent_type": {
            "type": "string",
            "description": "Type of consent (e.g., marketing_emails, data_processing)"
          },
          "consent_given": {
            "type": "boolean",
            "description": "Whether consent was given"
          },
          "revoked_at": {
            "type": "string",
            "format": "date-time",
            "description": "When the consent was revoked, if applicable"
          },
          "user_id": {
            "type": "string",
            "description": "ID of the user who gave/denied consent"
          },
          "ip_address": {
            "type": "string",
            "description": "IP address from which consent was given/denied"
          },
          "user_agent": {
            "type": "string",
            "description": "User agent from which consent was given/denied"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "Error message"
          }
        }
      },
      "EntityAccess": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Access entry's unique identifier"
          },
          "user_id": {
            "type": "string",
            "description": "ID of the user"
          },
          "entity_type": {
            "type": "string",
            "description": "Type of the entity (e.g., 'document', 'project')"
          },
          "entity_id": {
            "type": "string",
            "description": "ID of the specific entity"
          },
          "role_id": {
            "type": "string",
            "description": "ID of the role assigned for this access"
          }
        }
      }
    }
  },
  "paths": {
    "/api/auth/login": {
      "post": {
        "summary": "Authenticate user and get JWT token",
        "description": "Login with email and password to receive a JWT token. For users with MFA enabled, returns a partial token that must be used with the MFA verification endpoint.",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "User's email address"
                  },
                  "password": {
                    "type": "string",
                    "description": "User's password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful login",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "description": "Success status"
                    },
                    "mfa_required": {
                      "type": "boolean",
                      "description": "Indicates if MFA verification is required"
                    },
                    "token": {
                      "type": "string",
                      "description": "JWT Token (only present if MFA is not required)"
                    },
                    "partial_token": {
                      "type": "string",
                      "description": "Partial JWT Token for MFA flow (only present if MFA is required)"
                    },
                    "user": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/refresh": {
      "post": {
        "summary": "Refresh JWT token",
        "description": "Refresh an existing JWT token with a new one",
        "tags": ["Auth"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully refreshed token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "description": "Success status"
                    },
                    "token": {
                      "type": "string",
                      "description": "New JWT Token"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/verify": {
      "get": {
        "summary": "Verify JWT token",
        "description": "Verify a JWT token and get user information",
        "tags": ["Auth"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Token is valid",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "description": "Success status"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "description": "User ID"
                        },
                        "email": {
                          "type": "string",
                          "description": "User email"
                        },
                        "mfa_enabled": {
                          "type": "boolean",
                          "description": "MFA status"
                        },
                        "role": {
                          "$ref": "#/components/schemas/Role"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/mfa/challenge": {
      "get": {
        "summary": "MFA Challenge",
        "description": "Get MFA challenge information for a user with MFA enabled",
        "tags": ["Auth"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "MFA challenge information",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Please enter the code from your authenticator app"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "MFA not enabled for user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "error": {
                      "type": "string",
                      "example": "MFA is not enabled for this user"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Unauthorized"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/mfa/verify": {
      "post": {
        "summary": "Verify MFA Code",
        "description": "Verify the TOTP code provided by the user and issue a full JWT token",
        "tags": ["Auth"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["code"],
                "properties": {
                  "code": {
                    "type": "string",
                    "description": "TOTP code from authenticator app",
                    "example": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "MFA verification successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    },
                    "message": {
                      "type": "string",
                      "example": "MFA verification successful"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid authentication flow",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "error": {
                      "type": "string",
                      "example": "Invalid authentication flow. Please login again."
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid MFA code",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "error": {
                      "type": "string",
                      "example": "Invalid MFA code"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/logout": {
      "post": {
        "summary": "Logout user",
        "description": "Logout and invalidate the session (for audit purposes)",
        "tags": ["Auth"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully logged out",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "description": "Success status"
                    },
                    "message": {
                      "type": "string",
                      "description": "Success message"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/health": {
      "get": {
        "summary": "Health check",
        "description": "Check if the API is up and running",
        "tags": ["System"],
        "responses": {
          "200": {
            "description": "API is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "description": "Health status"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/system/status": {
      "get": {
        "summary": "System status",
        "description": "Get detailed system status information",
        "tags": ["System"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "System status information",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "description": "Overall system status"
                    },
                    "version": {
                      "type": "string",
                      "description": "System version"
                    },
                    "uptime": {
                      "type": "number",
                      "description": "System uptime in seconds"
                    },
                    "resources": {
                      "type": "object",
                      "description": "System resource utilization"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/users": {
      "get": {
        "summary": "List users",
        "description": "Get a list of users",
