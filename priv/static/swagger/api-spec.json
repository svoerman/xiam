    "/api/consents": {
      "get": {
        "summary": "List consent records",
        "description": "Get a list of consent records",
        "tags": ["Consent"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "description": "Number of items per page",
            "schema": {
              "type": "integer",
              "default": 20
            }
          },
          {
            "name": "consent_type",
            "in": "query",
            "description": "Filter by consent type",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "user_id",
            "in": "query",
            "description": "Filter by user ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of consent records",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/ConsentRecord"
                      }
                    },
                    "total_count": {
                      "type": "integer",
                      "description": "Total number of consent records"
                    },
                    "page": {
                      "type": "integer",
                      "description": "Current page"
                    },
                    "total_pages": {
                      "type": "integer",
                      "description": "Total number of pages"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create consent record",
        "description": "Create a new consent record",
        "tags": ["Consent"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["consent_type", "consent_given", "user_id"],
                "properties": {
                  "consent_type": {
                    "type": "string",
                    "description": "Type of consent"
                  },
                  "consent_given": {
                    "type": "boolean",
                    "description": "Whether consent is given"
                  },
                  "user_id": {
                    "type": "string",
                    "description": "ID of the user giving/denying consent"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Consent record created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "description": "Success status"
